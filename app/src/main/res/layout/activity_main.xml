<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:contentInsetStart="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:contentInsetStart="0dp"
            android:background="#A80000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="3">

            <ImageView
                android:id="@+id/hamburger_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:src="@drawable/ic_drawer"
                android:layout_marginStart="34dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />


                <ImageView
                android:id="@+id/thelatest_logo_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_logo"
                    android:layout_marginEnd="23dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/opinions" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/opinions"
                android:text="Opinions"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"
                android:layout_marginEnd="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"></Button>

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>


        <FrameLayout
            android:id="@+id/main_fragment_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_height"
            android:layout_gravity="left|top" >


        </FrameLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingButton"
                android:src="@drawable/ic_more_vert_black"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="16dp"
                android:layout_gravity="bottom|right"
                app:backgroundTint="#A80000"
                android:clickable="true"
                android:focusable="true"/>
        </android.support.design.widget.CoordinatorLayout>

    </FrameLayout>

    <!-- Listview to display slider menu -->
    <ScrollView
        android:id="@+id/slide_menu_scrollview"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="-64dp"
        android:fitsSystemWindows="true"
        android:background="@drawable/shape_gradient">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/slide_menu_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingBottom="30dp"
            >

        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>