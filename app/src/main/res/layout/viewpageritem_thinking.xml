<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="15dp">

    <ImageView
        android:background="#000000"
        android:adjustViewBounds="true"
        android:id="@+id/thinking_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/news"/>

    <TextView
        android:id="@+id/thinking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THINKING TITLE"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/thinking_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THINKING SUMMARY"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#A80000"/>

    <TextView
        android:id="@+id/thinking_read_full_thinking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Full Thinking"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#0066FF"/>

    <TextView
        android:id="@+id/thinking_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoko Song | Football | 1 day ago"
        android:textSize="10dp"
        android:textStyle="bold"/>

</LinearLayout>