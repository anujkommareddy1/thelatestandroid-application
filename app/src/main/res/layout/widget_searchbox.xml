<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_searchbox_myconnections_mycontributors"
    android:layout_margin="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/edittext_searchbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set your own hint"
        android:background="#00000000"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/ic_search"
        android:layout_toStartOf="@+id/ic_search" />

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>